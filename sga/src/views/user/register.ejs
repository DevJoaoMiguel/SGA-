    <script>



  const spinner = document.getElementById("page-spinner");

  document.querySelectorAll("a[href]").forEach(link => {
    link.addEventListener("click", function (e) {
      const href = link.getAttribute("href");

      // Mostra o spinner apenas se o link não for âncora, JS ou com target
      if (
        !href.startsWith("#") &&
        !link.hasAttribute("target") &&
        !href.startsWith("javascript:")
      ) {
        spinner.style.display = "flex";
      }
    });
  });



        const termsCheckbox = document.getElementById('termsCheckbox');
        const termsModal = document.getElementById('termsModal');
        const termsLink = document.getElementById('termsLink');
        const closeModal = document.getElementById('closeModal');

        // Abrir modal de Termos de Uso
        termsLink.addEventListener('click', function () {
            termsModal.style.display = "block";
        });

        // Fechar modal de Termos de Uso
        closeModal.addEventListener('click', function () {
            termsModal.style.display = "none";
        });

        // Fechar modal clicando fora da área do conteúdo
        window.addEventListener('click', function (event) {
            if (event.target === termsModal) {
                termsModal.style.display = "none";
            }
        });

        document.getElementById('tipoEnsino').addEventListener('change', function () {
            const ensinoMedioFields = document.getElementById('ensinoMedioFields');
            const tecnicoFields = document.getElementById('tecnicoFields');

            ensinoMedioFields.classList.add('hidden');
            tecnicoFields.classList.add('hidden');

            if (this.value === 'ENSINO_MEDIO') {
                ensinoMedioFields.classList.remove('hidden');
            } else if (this.value === 'TECNICO') {
                tecnicoFields.classList.remove('hidden');
            }
        });

    </script>
