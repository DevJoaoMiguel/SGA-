                                <option value="" disabled selected>Selecione o Curso</option>
                                <option value="MTEC ADMINISTRACAO">MTEC - ADMINISTRAÇÃO - INTEGRADO</option>
                                <option value="MTEC ELETRONICA">MTEC - ELETRONICA - INTEGRADO</option>
                                <option value="MTEC LOGISTICA">MTEC - LOGÍSTICA - INTEGRADO</option>
                                <option value="MTEC MECANICA">MTEC - MECÂNICA - INTEGRADO</option>
                                <option value="MTEC DES.SISTEMA">MTEC - DES.SISTEMA - MANHA</option>
                                <option value="MTEC DES.SISTEMA - INTEGRADO">MTEC - DES.SISTEMA - INTEGRADO</option>
                                <option value="MTEC DES.SISTEMA (A.M.S)">MTEC - DES.SISTEMA (A.M.S) - TARDE</option>
                                <option value="MTEC ELETROTECNICA">MTEC - ELETROTÉCNICA - MANHÃ</option>
                            </select>
                        </div>





                        <div id="tecnicoFields" class="hidden">
                            <div class="radio-group">
                                <label><input type="radio" name="anoCurso" value="1"> Módulo 1</label>
                                <label><input type="radio" name="anoCurso" value="2"> Módulo 2</label>
                                <label><input type="radio" name="anoCurso" value="30"> Módulo 3</label>
                            </div>

                            <label for="cursoTecnico">Curso (Técnico)</label>
                            <select name="curso" id="cursoTecnico">
                                <option value="" disabled selected>Selecione o Curso</option>
                                <option value="ADMINISTRACAO MODULAR">ADMINISTRAÇÃO</option>
                                <option value="ELETRONICA MODULAR">ELETRONICA</option>
                                <option value="ELETROTECNICA MODULAR">ELETROTÉCNICA</option>
                                <option value="MECANICA MODULAR">MECANICA</option>
                            </select>
                        </div>




                        <input type="password" id="password" name="password" placeholder="Senha" required>

                        <!-- Termos de Uso -->
                        <div class="terms-container">
                            <input type="checkbox" id="termsCheckbox" required>
                            <label for="termsCheckbox">
                                Aceito os <a href="javascript:void(0);" id="termsLink">Termos de Uso</a>
                            </label>
                        </div>

                        <button type="submit">Criar Conta</button>
                        <p style="text-align: center; font-size: 12px; color: #777; margin-top: 15px;">
                            © 2025 SGA. Todos os direitos reservados.
                        </p>
                    </form>
        </div>


